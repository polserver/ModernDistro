function GetJobType (byref player, byref merchant)
// The following mods were added by Yukiko on 04-Oct-2006 to make this a general purpose "job" system.

    var tradelist := {};

    tradelist := {34, 37, 7, 11, 13, 23, 12, 44, 45, 18};
    var index:= RandomInt(9) +1;
    return tradelist[index];

