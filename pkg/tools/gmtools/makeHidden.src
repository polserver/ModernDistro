use os;
use uo;

program makhidden(who)
    if (who.cmdlevel < 2)
      return;
    endif
    SendSysMessage( who, "Select an item to make hidden." );
    var item := Target( who, TGTOPT_NOCHECK_LOS );
    if (!item)
      SendSysMessage(who, "Targetting cancelled.");
      return;
    endif
    item.invisible := 1;
endprogram